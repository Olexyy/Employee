@using WebApplication.Models
@model TweetAdminViewModel

@{
    ViewBag.Title = "Admin dashboard";
}

<h2> @ViewBag.Title </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SelectedRoles)
                </th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Users.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Users[i].UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Roles[i].Name)
                </td>
                <td>
                    @Html.DropDownListFor(modelItem => Model.SelectedRoles[i], Model.RolesSelectList)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
