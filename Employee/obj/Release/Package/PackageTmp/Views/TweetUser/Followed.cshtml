@model IEnumerable<TweetUserFollower>

@{
    ViewBag.Title = "Followed Users";
    TweetUser user = ViewBag.TweetUser as TweetUser;
}

<h2>Followed tweets</h2>

@if(Model.Count() == 0)
{
    <p>No items in list</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().FollowedTweetUser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Created)
            </th>
            <th> Actions </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FollowedTweetUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FollowedTweetUser.Created)
                </td>
                <td>
                    @Html.TweetUserFollowWidget(item.FollowedTweetUser, user)
                </td>
            </tr>
        }

    </table>
}
