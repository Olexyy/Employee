@model IEnumerable<TweetFollower>

@{
    ViewBag.Title = "Followed Tweets";
    TweetUser user = ViewBag.TweetUser as TweetUser;
}

<h2>Followed tweets</h2>

@if(Model.Count() == 0)
{
    <p>No items in list</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Tweet.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TweetUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Tweet.Created)
            </th>
            <th> Actions </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tweet.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tweet.TweetUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tweet.Created)
                </td>
                <td>
                    @Html.TweetFollowWidget(item.Tweet, user)
                </td>
            </tr>
        }

    </table>
}
